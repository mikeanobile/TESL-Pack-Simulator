<?xml version='1.0' encoding='utf-8'?>
<widget id="site.tesl.pack" version="1.0.5" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>TESL Pack Simulator</name>
    <description>
        Pack opening simulator for The Elder Scrolls Legends.
    </description>
    <author email="support@phonegap.com" href="http://TESL.SITE">
        Mike Anobile
    </author>
    <content src="index.html" />
    <icon src="icon.png" />
    <gap:plugin name="cordova-plugin-whitelist" source="npm" />
    <gap:plugin name="phonegap-admob" source="npm" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="orientation" value="landscape" />
    <preference name="fullscreen" value="true" />
    <engine name="android" spec="~6.2.3" />
    <plugin name="cordova-plugin-admobpro" spec="~2.29.22" />
